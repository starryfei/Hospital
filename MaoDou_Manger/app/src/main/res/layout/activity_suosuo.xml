<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyansoft.maodou_manger.Activity.SuosuoActivity">

    <LinearLayout
        android:id="@+id/sousuo_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#39495D"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sousuo_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#39495D"
            android:drawableLeft="@mipmap/ssdk_back_arr"
            android:gravity="center"
            android:text="返回"
            android:textColor="#FAFAFA"
            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/sousuo_edittxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:background="@drawable/sousuo_bj"
            android:drawableLeft="@mipmap/abc_ic_search_api_holo_light"
            android:hint="搜索"
            android:singleLine="true"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/sousuo_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#39495D"
            android:gravity="center|center_horizontal"
            android:text="搜索"
            android:textColor="#FAFAFA"
            android:textSize="15sp"/>
        <Spinner
            android:id="@+id/spinner_chose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#39495D"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:textSize="15sp" />
    </LinearLayout>
    <ListView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_doctor"
        android:layout_below="@+id/sousuo_LinearLayout">

    </ListView>
</RelativeLayout>
